<Window x:Class="TestWpfFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">



    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Height="100">
            <TextBox  Height="40" BorderThickness="3" Margin="10" FontSize="16"/>
            <Button Width="100" Height="40" Margin="0,0,0,10" Content="Ok"/>
        </StackPanel>
        
        <GroupBox Header="Список элементов" Margin="10">
            <ListBox
                    SelectionMode="Extended"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ItemsSource="{Binding VideosView}"
                    SelectedItem="{Binding SelectedVideo}"/>
        </GroupBox>

    </DockPanel>
</Window>
